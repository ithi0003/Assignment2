{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Daily hotspot counts split by Day (D) and Night (N), with legend selection and a peak-day annotation.",
  "width": 750,
  "height": 320,
  "config": { "background": "#F5F5F5", "view": { "stroke": null } },
  "data": {
    "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/fire_archive_M6_96619.csv"
  },

"params": [
  {
    "name": "dayNightSelect",
    "select": {
      "type": "point",
      "fields": ["daynight"],
      "on": "click",
      "toggle": "true"
    },
    "bind": "legend"
  }
],


  "layer": [
    {
      "transform": [
        { "aggregate": [{ "op": "count", "as": "hotspots" }], "groupby": ["acq_date", "daynight"] }
      ],
      "mark": { "type": "area", "interpolate": "monotone" },
      "encoding": {
        "x": { "field": "acq_date", "type": "temporal", "title": "Date" },
        "y": { "field": "hotspots", "type": "quantitative", "stack": "zero", "title": "Hotspots" },
        "color": {
          "field": "daynight",
          "type": "nominal",
          "title": "Day/Night",
          "scale": { "domain": ["D", "N"], "range": ["#ffa726", "#42a5f5"] }
        },
        "opacity": {
          "condition": { "param": "dayNightSelect", "value": 1 },
          "value": 0.25
        },
        "tooltip": [
          { "field": "acq_date", "type": "temporal", "title": "Date" },
          { "field": "daynight", "type": "nominal", "title": "Day/Night" },
          { "field": "hotspots", "type": "quantitative", "title": "Hotspots" }
        ]
      }
    },

    {
      "transform": [
        { "aggregate": [{ "op": "count", "as": "totalDaily" }], "groupby": ["acq_date"] },
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "totalDaily", "order": "descending" }] },
        { "filter": "datum.r == 1" }
      ],
      "mark": { "type": "rule", "stroke": "#333", "strokeDash": [6, 4], "strokeWidth": 2 },
      "encoding": {
        "x": { "field": "acq_date", "type": "temporal" },
        "tooltip": [
          { "field": "acq_date", "type": "temporal", "title": "Peak Day" },
          { "field": "totalDaily", "type": "quantitative", "title": "Total hotspots" }
        ]
      }
    },

    {
      "transform": [
        { "aggregate": [{ "op": "count", "as": "totalDaily" }], "groupby": ["acq_date"] },
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "totalDaily", "order": "descending" }] },
        { "filter": "datum.r == 1" }
      ],
      "mark": { "type": "text", "dx": 6, "dy": -8, "fontSize": 12, "fontWeight": "bold", "fill": "#333" },
      "encoding": {
        "x": { "field": "acq_date", "type": "temporal" },
        "y": { "value": 0 },
        "text": { "field": "totalDaily", "type": "quantitative", "format": "Peak: {,.0f}" }
      }
    }
  ]
}
