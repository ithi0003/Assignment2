{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Hotspot counts per day split by Day and Night. Dropdown filter + annotation.",
  "width": 750,
  "height": 320,
  "config": { "background": "#F5F5F5", "view": { "stroke": null } },

  "data": { "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/main/data/fire_archive_M6_96619.csv" },

  "params": [
    {
      "name": "dnFilter",
      "value": "All",
      "bind": { "input": "select", "options": ["All","Day","Night"], "name": "Select: " }
    }
  ],

  "layer": [
    {
      "transform": [
        { "calculate": "split(datum.acq_date,'/')", "as": "parts" },
        {
          "calculate": "(toNumber(datum.parts[2]) + '-' + (length(datum.parts[1])<2 ? '0'+datum.parts[1] : datum.parts[1]) + '-' + (length(datum.parts[0])<2 ? '0'+datum.parts[0] : datum.parts[0]))",
          "as": "iso"
        },
        { "calculate": "toDate(datum.iso)", "as": "date" },
        { "filter": "datum.daynight == 'D' || datum.daynight == 'N'" },
        { "filter": "dnFilter == 'All' || datum.daynight == dnFilter" },
        { "aggregate": [{ "op": "count", "as": "hotspots" }], "groupby": ["date","daynight"] }
      ],
      "mark": { "type": "area", "interpolate": "linear", "strokeWidth": 1.5 },
      "encoding": {
        "x": { "field": "date", "type": "temporal", "title": "Date", "axis": { "grid": false } },
        "y": { "field": "hotspots", "type": "quantitative", "title": "Hotspot Count", "stack": "zero", "axis": { "grid": false } },
        "color": {
          "field": "daynight",
          "type": "nominal",
          "title": "Day/Night",
          "scale": { "domain": ["D","N"], "range": ["#fadb44","#2a3444"] }
        },
        "tooltip": [
          { "field": "date", "type": "temporal", "title": "Date" },
          { "field": "daynight", "type": "nominal", "title": "Time of Day" },
          { "field": "hotspots", "type": "quantitative", "title": "Hotspots" }
        ]
      }
    },

    {
      "transform": [
        { "calculate": "split(datum.acq_date,'/')", "as": "parts" },
        {
          "calculate": "(toNumber(datum.parts[2]) + '-' + (length(datum.parts[1])<2 ? '0'+datum.parts[1] : datum.parts[1]) + '-' + (length(datum.parts[0])<2 ? '0'+datum.parts[0] : datum.parts[0]))",
          "as": "iso"
        },
        { "calculate": "toDate(datum.iso)", "as": "date" },
        { "aggregate": [{ "op": "count", "as": "dailyCount" }], "groupby": ["date"] },
        { "aggregate": [{ "op": "sum", "field": "dailyCount", "as": "totalDaily" }], "groupby": ["date"] },
        { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "totalDaily", "order": "descending" }] },
        { "filter": "datum.r == 1" }
      ],
      "mark": { "type": "rule", "stroke": "#333", "strokeDash": [6,4], "strokeWidth": 1 },
      "encoding": { "x": { "field": "date", "type": "temporal" } }
    },

    {
  "transform": [
    { "calculate": "split(datum.acq_date,'/')", "as": "parts" },
    {
      "calculate": "(toNumber(datum.parts[2]) + '-' + (length(datum.parts[1])<2 ? '0'+datum.parts[1] : datum.parts[1]) + '-' + (length(datum.parts[0])<2 ? '0'+datum.parts[0] : datum.parts[0]))",
      "as": "iso"
    },
    { "calculate": "toDate(datum.iso)", "as": "date" },
    { "aggregate": [{ "op": "count", "as": "dailyCount" }], "groupby": ["date"] },
    { "aggregate": [{ "op": "sum", "field": "dailyCount", "as": "totalDaily" }], "groupby": ["date"] },
    { "window": [{ "op": "rank", "as": "r" }], "sort": [{ "field": "totalDaily", "order": "descending" }] },
    { "filter": "datum.r == 1" },
    { "calculate": "'September 10: 1317 hotspots'", "as": "label" }
  ],
  "mark": { "type": "text", "dx": 6, "dy": -8, "fontSize": 12, "fontWeight": "bold", "fill": "#333" },
  "encoding": {
    "x": { "field": "date", "type": "temporal" },
    "y": { "value": 0 },
    "text": { "field": "label" }
  }
}

  ]
}
