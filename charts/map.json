{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 619,
  "projection": {
    "type": "mercator",
    "scale": 900,
    "center": [495, -28.25]
  },
  "config": {
    "background": "#F5F5F5", 
    "view": {
      "stroke": null  
    }
  },
  "params": [
    {
      "name": "frpThreshold",
      "value": 100,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 2000,
        "step": 10,
        "name": "FRP Threshold: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#7cc48f",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue",
        "stroke": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/refs/heads/main/data/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#F5F5F5"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ithi0003/Assignment2/refs/heads/main/data/fire_archive_M6_96619.csv"
      },
      "transform": [
        {
          "filter": "datum.confidence > 80 && datum.frp > frpThreshold"
        },
        {
          "sort": [{"field": "frp", "order": "descending"}]
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "scan",
          "type": "quantitative",
          "title": "Scan",
          "scale": {
            "domain": [1, 3]
          },
          "legend": {
            "orient": "none",
            "direction": "vertical",
            "legendX": 700,
            "legendY": 290,
            "title": "Fire Size"
          }
        },
        "color": {
          "field": "frp",
          "type": "quantitative",
          "title": "Fire Radiative Power (FRP)",
          "scale": {
            "domain": [100, 1000, 2000],
            "range": ["#FFA500", "#FF4500", "#8B0000"]
          },
          "legend": {
            "orient": "none",
            "direction": "vertical",
            "legendX": 700,
            "legendY": 45,
            "title": "FRP"
          }
        },
        "tooltip": [
          {
            "field": "acq_date",
            "type": "temporal",
            "title": "Date",
            "timeUnit": "yearmonthdate",
            "format": "%d/%m/%Y"
          },
          {
            "field": "frp",
            "type": "quantitative",
            "title": "Fire Radiative Power (FRP)"
          },
          {
            "field": "scan",
            "type": "quantitative",
            "title": "Scan Size"
          },
          {
            "field": "brightness",
            "type": "quantitative",
            "title": "Brightness"
          }
        ]
      }
    }
  ]
}
